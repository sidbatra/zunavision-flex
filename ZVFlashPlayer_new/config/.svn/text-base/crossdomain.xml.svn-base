<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE cross-domain-policy SYSTEM
  "http://www.adobe.com/xml/dtds/cross-domain-policy.dtd">
<cross-domain-policy>
  <site-control permitted-cross-domain-policies="master-only" />
  <allow-access-from domain="*.s3.amazonaws.com" />
  <allow-http-request-headers-from domain="*.s3.amazonaws.com" 
    headers="SOAPAction" />
  <allow-access-from domain="*.dropletz.com" />
  <allow-http-request-headers-from domain="*.dropletz.com" 
    headers="SOAPAction" />
</cross-domain-policy>
